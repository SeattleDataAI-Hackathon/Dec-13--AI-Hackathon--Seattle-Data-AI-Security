.app {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  margin: 0;
}

.header {
  background: rgba(0, 0, 0, 0.3);
  color: white;
  text-align: center;
  padding: 3rem 1rem;
  border-bottom: 2px solid rgba(255, 255, 255, 0.1);
}

.header h1 {
  margin: 0;
  font-size: 3rem;
  font-weight: bold;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.header p {
  margin: 0.5rem 0 0 0;
  font-size: 1.1rem;
  opacity: 0.9;
}

.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.input-section,
.quiz-section,
.results-section {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  margin-bottom: 2rem;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Form Styles */
.form {
  display: grid;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-group label {
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: #333;
  font-size: 1rem;
}

.form-group input,
.form-group select {
  padding: 0.75rem;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
  background: white;
  color: #333;
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-group input::placeholder {
  color: #999;
}

.submit-btn,
.nav-btn {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.submit-btn:hover:not(:disabled),
.nav-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
}

.submit-btn:disabled,
.nav-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.error-message {
  background: #fee;
  color: #c33;
  padding: 1rem;
  border-radius: 8px;
  border-left: 4px solid #c33;
  margin-top: 1rem;
}

/* Quiz Styles */
.quiz-header {
  margin-bottom: 2rem;
  text-align: center;
}

.quiz-header h2 {
  margin: 0 0 1rem 0;
  color: #333;
  font-size: 1.8rem;
}

.quiz-progress {
  margin-top: 1rem;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: #e0e0e0;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.quiz-progress p {
  margin: 0;
  color: #666;
  font-size: 0.9rem;
}

.quiz-content {
  background: #f9f9f9;
  padding: 2rem;
  border-radius: 12px;
  margin-bottom: 2rem;
}

.quiz-content h3 {
  margin: 0 0 1.5rem 0;
  color: #333;
  font-size: 1.3rem;
  line-height: 1.5;
}

.options {
  display: grid;
  gap: 1rem;
}

.option {
  padding: 1rem;
  background: white;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  text-align: left;
  cursor: pointer;
  font-size: 1rem;
  transition: all 0.3s ease;
  color: #333;
  font-family: inherit;
  font-weight: 500;
}

.option:hover {
  border-color: #667eea;
  background: #f5f5ff;
}

.option.selected {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-color: #667eea;
  color: #667eea;
}

.quiz-navigation {
  display: flex;
  gap: 1rem;
  justify-content: space-between;
  margin-top: 2rem;
}

.nav-btn {
  flex: 1;
  padding: 0.75rem 1rem;
  background: #f0f0f0;
  color: #333;
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-btn:hover:not(:disabled) {
  border-color: #667eea;
  color: #667eea;
  background: #f5f5ff;
}

.nav-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.quiz-navigation .submit-btn {
  flex: 1;
}

/* Results & Roadmap Styles */
.results-section {
  display: grid;
  gap: 2rem;
}

.quiz-results {
  background: #f9f9f9;
  padding: 2rem;
  border-radius: 12px;
  border-left: 4px solid #667eea;
}

.quiz-results h2 {
  margin: 0 0 1.5rem 0;
  color: #333;
  font-size: 1.5rem;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 2rem;
  margin-bottom: 1.5rem;
}

.score-circle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120px;
  height: 120px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  flex-shrink: 0;
}

.score-percent {
  color: white;
  font-size: 2.5rem;
  font-weight: bold;
}

.score-details p {
  margin: 0;
  color: #666;
  font-size: 1.1rem;
}

.areas-box {
  margin-top: 1rem;
  padding: 1rem;
  border-radius: 8px;
  background: white;
}

.areas-box.strong {
  border-left: 4px solid #4caf50;
}

.areas-box.weak {
  border-left: 4px solid #ff9800;
}

.areas-box h4 {
  margin: 0 0 0.5rem 0;
  color: #333;
  font-size: 1rem;
}

.areas-box ul {
  margin: 0;
  padding-left: 1.5rem;
  list-style-type: none;
}

.areas-box li {
  color: #666;
  margin-bottom: 0.3rem;
  padding-left: 0.5rem;
  position: relative;
}

.areas-box.strong li::before {
  content: "✓ ";
  color: #4caf50;
  font-weight: bold;
  position: absolute;
  left: -1rem;
}

.areas-box.weak li::before {
  content: "○ ";
  color: #ff9800;
  position: absolute;
  left: -1rem;
}

.roadmap-section {
  background: white;
}

.roadmap-header {
  margin-bottom: 2rem;
  border-bottom: 2px solid #e0e0e0;
  padding-bottom: 1rem;
}

.roadmap-header h2 {
  margin: 0 0 1rem 0;
  color: #333;
  font-size: 2rem;
}

.roadmap-meta {
  display: flex;
  gap: 2rem;
  font-size: 0.95rem;
  color: #666;
  flex-wrap: wrap;
}

.roadmap-meta span {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.roadmap-summary {
  background: #f5f5f5;
  padding: 1.5rem;
  border-radius: 8px;
  margin-bottom: 2rem;
  line-height: 1.6;
  color: #555;
  border-left: 4px solid #667eea;
}

.focus-areas {
  margin-bottom: 2rem;
}

.focus-areas h3 {
  margin: 0 0 1rem 0;
  color: #333;
  font-size: 1.2rem;
}

.focus-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.tag {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
  color: #667eea;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 500;
  border: 1px solid #667eea;
}

.roadmap-steps {
  display: grid;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.step-card {
  display: flex;
  gap: 1.5rem;
  padding: 1.5rem;
  border: 2px solid #e0e0e0;
  border-radius: 12px;
  background: #fafafa;
  transition: all 0.3s ease;
}

.step-card:hover {
  border-color: #667eea;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
  background: #f9f7ff;
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 3.5rem;
  height: 3.5rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  font-weight: bold;
  font-size: 1.3rem;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-content h3 {
  margin: 0 0 0.5rem 0;
  color: #333;
  font-size: 1.2rem;
}

.step-content p {
  margin: 0 0 1rem 0;
  color: #666;
  line-height: 1.6;
}

.step-details {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
  flex-wrap: wrap;
}

.time {
  display: inline-block;
  background: #e8eaf6;
  color: #667eea;
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 500;
}

.resources {
  margin-top: 1rem;
}

.resources h4 {
  margin: 0 0 0.5rem 0;
  color: #333;
  font-size: 0.95rem;
}

.resource-list {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

.resource-item {
  background: #f8f9fa;
  border-left: 4px solid #667eea;
  padding: 1rem;
  margin-bottom: 0.8rem;
  border-radius: 6px;
  transition: all 0.3s ease;
}

.resource-item:hover {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transform: translateX(4px);
}

.resource-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.resource-title {
  font-weight: 600;
  color: #333;
  font-size: 0.95rem;
}

.resource-badge {
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.25rem 0.6rem;
  border-radius: 4px;
}

.resource-description {
  color: #666;
  margin: 0.3rem 0;
  font-size: 0.9rem;
  line-height: 1.4;
}

.resource-type {
  display: inline-block;
  font-size: 0.8rem;
  color: #999;
  font-style: italic;
  margin-top: 0.3rem;
}

.resources a {
  color: #667eea;
  text-decoration: none;
}

.resources a:hover {
  text-decoration: underline;
}

.roadmap-actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.download-btn {
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
  color: white;
  border: 2px solid #ff9800;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.download-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  transition: left 0.3s ease;
}

.download-btn:hover::before {
  left: 100%;
}

.download-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 152, 0, 0.4);
}

.download-btn.pro-feature {
  position: relative;
}

.download-btn.pro-feature::after {
  content: '⭐';
  display: inline-block;
  margin-left: 0.5rem;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

.reset-btn {
  padding: 0.75rem 1.5rem;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
  min-width: 200px;
}

.reset-btn:hover {
  background: #764ba2;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .header h1 {
    font-size: 2rem;
  }
  
  .roadmap-actions {
    flex-direction: column;
  }
  
  .download-btn,
  .reset-btn {
    width: 100%;
  }

  .header p {
    font-size: 1rem;
  }

  .input-section,
  .quiz-section,
  .results-section {
    padding: 1.5rem;
  }

  .form {
    gap: 1rem;
  }

  .step-card {
    flex-direction: column;
    gap: 1rem;
  }

  .step-number {
    width: 3rem;
    height: 3rem;
    font-size: 1.1rem;
  }

  .roadmap-meta {
    flex-direction: column;
    gap: 0.5rem;
  }

  .roadmap-header h2 {
    font-size: 1.5rem;
  }

  .quiz-navigation {
    flex-direction: column;
  }

  .score-display {
    flex-direction: column;
    gap: 1rem;
  }
}

/* Review Section Styles */
.review-section {
  background: white;
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  margin-bottom: 2rem;
  animation: fadeIn 0.3s ease;
}

.review-header {
  margin-bottom: 2rem;
  text-align: center;
}

.review-header h2 {
  color: #333;
  font-size: 2rem;
  margin: 0 0 1.5rem 0;
}

.review-summary {
  display: flex;
  justify-content: center;
  margin-bottom: 2rem;
}

.review-content {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.review-item {
  border: 2px solid #e0e0e0;
  border-radius: 8px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.review-item.correct {
  background-color: #f0f9ff;
  border-color: #4caf50;
}

.review-item.incorrect {
  background-color: #fff5f5;
  border-color: #ff6b6b;
}

.review-question {
  margin-bottom: 1rem;
}

.question-number {
  font-size: 0.85rem;
  color: #999;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.review-question h4 {
  color: #333;
  margin: 0;
  font-size: 1.1rem;
  line-height: 1.5;
}

.review-answers {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.answer-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
  background: #f9f9f9;
  border-radius: 6px;
  border-left: 4px solid #e0e0e0;
  transition: all 0.2s ease;
}

.answer-option.correct-answer {
  background-color: #e8f5e9;
  border-left-color: #4caf50;
}

.answer-option.user-wrong-answer {
  background-color: #ffebee;
  border-left-color: #ff6b6b;
}

.answer-option.user-correct-answer {
  background-color: #e8f5e9;
  border-left-color: #4caf50;
}

.answer-content {
  display: flex;
  gap: 1rem;
  flex: 1;
}

.option-letter {
  font-weight: 700;
  color: #667eea;
  min-width: 2rem;
}

.option-text {
  color: #333;
  line-height: 1.4;
}

.badge {
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.4rem 0.8rem;
  border-radius: 4px;
  background-color: #4caf50;
  color: white;
  white-space: nowrap;
  margin-left: 1rem;
}

.badge.error {
  background-color: #ff6b6b;
}

.badge.success {
  background-color: #4caf50;
}

.review-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
  padding-top: 1rem;
  border-top: 2px solid #f0f0f0;
}

.review-actions .submit-btn {
  padding: 0.75rem 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.review-actions .submit-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
}

.review-actions .submit-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.review-actions .reset-btn {
  padding: 0.75rem 2rem;
  background: #f0f0f0;
  color: #333;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.review-actions .reset-btn:hover {
  background: #e0e0e0;
  border-color: #bbb;
}

@media (max-width: 768px) {
  .review-section {
    padding: 1.5rem;
  }

  .review-header h2 {
    font-size: 1.5rem;
  }

  .answer-option {
    flex-direction: column;
    align-items: flex-start;
  }

  .badge {
    margin-left: 0;
    margin-top: 0.5rem;
  }

  .review-actions {
    flex-direction: column;
  }

  .review-actions button {
    width: 100%;
  }
}

